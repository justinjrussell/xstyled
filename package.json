{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "bundlesize": [
    {
      "path": "./packages/system/dist/xstyled-system.min.js",
      "maxSize": "4.4 kB"
    },
    {
      "path": "./packages/styled-components/dist/xstyled-styled-components.min.js",
      "maxSize": "1.8 kB"
    },
    {
      "path": "./packages/emotion/dist/xstyled-emotion.min.js",
      "maxSize": "1.8 kB"
    }
  ],
  "scripts": {
    "build": "lerna run build",
    "build:watch": "WATCH_MODE=true lerna run --parallel build -- --watch",
    "format": "prettier --write \"**/*.{js,json,md,mdx}\"",
    "lint": "eslint .",
    "release": "lerna publish --conventional-commits && conventional-github-releaser --preset angular",
    "test": "jest",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@emotion/core": "^10.0.10",
    "@emotion/styled": "^10.0.11",
    "@testing-library/react": "^8.0.1",
    "@types/jest": "^24.0.15",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "bundlesize": "^0.17.2",
    "codecov": "^3.5.0",
    "conventional-github-releaser": "^3.1.3",
    "emotion-theming": "^10.0.10",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-smooth": "^2.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "jest": "^24.8.0",
    "jest-dom": "^3.4.0",
    "jest-emotion": "^10.0.11",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.15.0",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rollup": "^1.15.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-size-snapshot": "^0.9.0",
    "rollup-plugin-terser": "^5.0.0",
    "shx": "^0.3.2",
    "styled-components": "^4.3.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2"
  }
}
